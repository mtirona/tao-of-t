@model tao_of_t.Viewmodel.ScheduleViewmodel

@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 

<div id="header-image">
    <img src="~/images/page/roses.png" alt="Smell the roses of the world." />
</div>

<div id="schedule-dialog">
    <div id="page-content">
        <section id="content">
            <div id="content-container">
                <h3>Schedule an Appointment</h3>
                <br />
                <p>To schedule an individual, children, couples, marriage or family therapy appointment or to obtain additional information about any of these counseling services, please fill out the form below.</p>
                <br />

                <div id="information">

                    <div class="error">                    
                        @Html.ValidationSummary(true) 
                    </div>

                    @using (Html.BeginForm("Schedule", "Home")) {
                            <table style="width:100%;">
                                <tr>
                                    <td><label style="font-style:italic" for="DateAndTime">Date/Time:</label></td>
                                    <td>
                                        @Html.TextBoxFor(m => Model.ScheduleTimeDate,  new { @id = "scheduledatetime" })
                                        @Html.ValidationMessageFor(m => Model.ScheduleTimeDate)
                                    </td>
                                </tr>
                                <tr>
                                    <td><label style="font-style:italic" for="Firstname">Firstname:</label></td>
                                    <td>@Html.TextBoxFor(m => Model.Firstname) 
                                        @Html.ValidationMessageFor(m => Model.Firstname) 
                                    </td>
                                </tr>
                                <tr>
                                    <td><label style="font-style:italic" for="Lastname">Lastname:</label></td>
                                    <td>@Html.TextBoxFor(m => Model.Lastname) 
                                        @Html.ValidationMessageFor(m => Model.Lastname) 
                                    </td>
                                </tr>
                                <tr>
                                    <td><label style="font-style:italic" for="Phone">Phone:</label></td>
                                    <td>@Html.TextBoxFor(m => Model.Phone) 
                                        @Html.ValidationMessageFor(m => Model.Phone) 
                                    </td>
                                </tr>
                                <tr>
                                    <td><label style="font-style:italic" for="Email">Email:</label></td>
                                    <td>@Html.TextBoxFor(m => Model.Email) 
                                        @Html.ValidationMessageFor(m => Model.Email) 
                                    </td>
                                </tr>
                                <tr>
                                    <td><label style="font-style:italic" for="YourConcerns">Your Concerns:</label></td>
                                    <td>
                                        @Html.TextAreaFor(m => Model.Concerns, new { @class = "textarea" }) 
                                    </td>
                                </tr>
                            </table>   

                            <input type="image" name="Schedule" id="Schedule" src="~/images/send.png" alt="Submit">
                    }
