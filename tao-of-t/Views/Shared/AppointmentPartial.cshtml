
<div>
    <div id="onmymind-img">
        <img src="../../Images/page/onmymind.png" alt="What's on my mind" />
    </div>

    <div id="accordion"></div>
</div>

<script>
    $(document).ready(function () {

        $('#accordion').accordion();

        var allcontent;
        $.ajax({
            type: "GET",
            url: "http://www.tao-of-t.com/onmymind_data.xml",
            dataType: "xml",
            success: function (xml) {

                $(xml).find('item').each(function () {
                    var id = $(this).attr('id');
                    var header = $(this).find('header').text();
                    var content = $(this).find('content').text();
                    if (typeof allcontent == 'undefined') {
                        allcontent = '<h3 id="' + id + '"' + '> ' + header + '</h3><div>' + content + '</div>';
                    } else {
                        allcontent = allcontent + '<h3 id="' + id + '"' + '> ' + header + '</h3><div>' + content + '</div>';
                    }
                });
                if (typeof allcontent != 'undefined') {
                    $('#accordion').append(allcontent).accordion('destroy').accordion();
                }
            }
        });

    });
</script>